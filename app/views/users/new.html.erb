<div class="row">
  <div class="col-lg-6">
    <div class="well bs-component">
      <form action="/users" method="post" class="form-horizontal">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <fieldset>
          <legend>Registration</legend>
          <div class="form-group">
            <label for="username" class="col-lg-3 control-label">Username</label>
            <div class="col-lg-9">
              <input type="text" class="form-control" id="username" name="username"  placeholder="Username">
            </div>
          </div>
          <div class="form-group">
            <label for="password" class="col-lg-3 control-label">Password</label>
            <div class="col-lg-9">
              <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
          </div>
          <div class="form-group">
            <label for="password_confirmation" class="col-lg-3 control-label">Confirmation</label>
            <div class="col-lg-9">
              <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" placeholder="Password Confirmation">
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-9 col-lg-offset-3">
              <a href='/sessions/new'><button type="submit" class="btn btn-default">Already a User?</button></a>
              <input class="btn btn-primary" type="submit" value="Join">
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
